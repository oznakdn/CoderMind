@page "/account/login"
@model CoderMind.WebApp.Pages.Account.LoginModel

<div class="row d-flex justify-content-center mt-5">
    <div class="col-4 offset-4 card">
        <div class="card-header text-center">Login</div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="LoginInput.Email" placeholder="email@example.com">
                        <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" asp-for="LoginInput.Password">
                        <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
