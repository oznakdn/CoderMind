@page "/technology/create"
@model CoderMind.WebApp.Pages.Technology.CreateModel

<div class="row d-flex mt-3">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header text-center">Add Technology</div>
            <div class="card-body">
                <form method="post" asp-page-handler="CreateTechnology">
                    <div class="form-group">
                        <label class="form-label col-form-label-sm text-primary">Name</label>
                        <input class="form-control form-control-sm" asp-for="CreateTechnology.Name" />
                    </div>
                    <div class="form-group mt-2">
                        <label class="form-label col-form-label-sm text-primary">Logo</label>
                        <input class="form-control form-control-sm" asp-for="CreateTechnology.Logo" />
                    </div>
                    <div class="form-group mt-2">
                        <label class="form-label col-form-label-sm text-primary">Description</label>
                        <textarea asp-for="CreateTechnology.Description" class="form-control form-control-sm" rows="8"></textarea>
                    </div>
                    <div class="form-group mt-3">
                        <button class="btn btn-primary" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>